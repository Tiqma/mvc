
{% extends 'base.html.twig' %}

{% block title %}Book List{% endblock %}

{% block body %}
<h1>Book List</h1>

<a href="{{ path('book_create') }}" class="btn btn-primary">Add New Book</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for book in books %}
        <tr>
            <td><a href="{{ path('book_show', { isbn: book.isbn }) }}">{{ book.title }}</a></td>
            <td>{{ book.isbn }}</td>
            <td>{{ book.author }}</td>
            <td>
                <a href="{{ path('book_edit', { isbn: book.isbn }) }}">Edit</a>
                <form action="{{ path('book_delete', { isbn: book.isbn }) }}" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
